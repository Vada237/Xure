@model Cart

<div class="">
    @if (Model.Lines.Count() > 0)
    {
        <small class="navbar-text">
            <b>Ваша корзина:</b>
            @Model.Lines.Sum(x => x.Quantity) item(s)
            @Model.TotalValue().ToString("c")
        </small>
    }

    <a class="nav-link text-muted" asp-action="Index" asp-controller="Cart" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>