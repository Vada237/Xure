@model LoginModel
@{
    Layout = "_SignInOutLayout";
}

<div class="container-fluid bg-light signin"> 
    <div class="row">        

        <div class="col-4 offset-4 bg-white pt-4 pb-5 borderform"> 
            
            <form method="post" asp-action="Login" asp-controller="Account" >
                <div class="text-danger" asp-validation-summary="All"></div>

                <div class="text-center">
                    <h3>Вход</h3>
                </div>
                <form asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                    </div>

                    <button class="btn btn-primary" type="submit">Вход</button>
                    <a class="p-1 text-dark" asp-action="CreateClientAccount">Зарегистрироваться</a>                    
                </form>
            </form>
        </div>
    </div>
</div>
