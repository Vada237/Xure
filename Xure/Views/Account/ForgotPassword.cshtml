@model ForgotPasswordViewModel
@{
    Layout = "_SignInOutLayout";
    ViewBag.Title = "Восстановление пароля";
}

<div class="container-fluid bg-light signin">
    <div class="row">

        <div class="col-4 offset-4 bg-white pt-4 pb-5 borderform">

            <div class="text-center">
                <h5>Забыли пароль?</h5>
                <form asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" />
                        <input asp-for="Email" class="form-control" placeholder="Введите Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-danger">Отправить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>