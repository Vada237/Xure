@model RoleViewModel
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Роли";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-1">
            <div class="m-1 p-1"><h4>Роли</h4></div>
<table class="table table-sm table-bordered table-striped"> 
    <tr>
        <th>Id</th>
        <th>Название роли</th>        
    </tr>

    @if(Model.roles.Count() == 0) {
        <tr>
            <td colspan="4" class="text-center">Нет ролей</td>
        </tr>
    } else {
        foreach (var role in Model.roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>                                
                <td>
                    <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="EditRole" asp-route-id="@role.Id">Изменить</a>
                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-action="CreateRole">Создать роль</a>
        </div>
    </div>
</div>