@model Category;
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Изменить категорию";
}

<div class="container">
    <div class="row">
        <div class="col mt-4">

            <form asp-action="EditCategory" method="post">

                <div class="form-group">
                    <input asp-for="@Model.Id" type="hidden" />
                    <label asp-for="@Model.Name">Название</label>
                    <input asp-for="@Model.Name" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">
                    Изменить
                </button>
                <a asp-action="СategoryList" class="btn btn-danger">Вернуться</a>
            </form>

        </div>
    </div>
</div>