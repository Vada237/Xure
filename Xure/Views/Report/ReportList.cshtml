@model ReportViewModel
@{
    Layout = "_ClientLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-8 offset-2">
            <h2>Жалобы на заказ</h2>

            <table class="table table-bordered">
                <thead class="thead">
                    <tr>                        
                        <th>Номер жалобы</th>
                        <th>Продукт</th>
                        <th>Причина</th>
                        <th>Комментарий</th>
                    </tr>
                </thead>
                <tbody>                                           
                        @foreach(var i in Model.orderReports)
                        {
                            <tr>
                            <td>@i.Id</td>                
                            <td>@i.Product.Name</td>
                            <td>@i.Reason.Name</td>
                            <td>@i.Commentary</td>                            
                            <td>
                            <form asp-action="ReportInfo" asp-controller="Report">
                                <input asp-for="@Model.OrderReport.Id" value="@i.Id" type="hidden">                                
                                <button type="submit" class="btn btn-sm btn-outline-danger">Подробнее</button>
                            </form>
                            </td>
                            </tr>
                        }                    
                </tbody>
            </table>
        </div>
    </div>
</div>