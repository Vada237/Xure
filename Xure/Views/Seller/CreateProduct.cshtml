@model ProductViewModel;
@{
    Layout = "_ClientLayout";
    ViewBag.Title = "Создать товар";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-8 offset-2">
            <form asp-action="CreateProduct" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger" ></div>

                <div class="form-group">
                    <label asp-for="@Model.Product.Name">Название</label>
                    <input asp-for="@Model.Product.Name" class="form-control"/>
                    <span asp-validation-for="@Model.Product.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Product.Description">Описание</label>
                    <textarea asp-for="@Model.Product.Description" class="form-control"></textarea>
                    <span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
                </div>

                 <p>Укажите бренд</p>
                <div class="row">                                       

                     <div class="col-6">
                        <div class="form-group">                            
                            <input asp-for="@Model.Brand.Name" class="form-control" placeholder="Укажите бренд"/>                            
                        </div>
                     </div>

                     <div class="col-6">
                         <div class="form-group">                            
                            <input asp-for="@Model.Brand.Country" class="form-control" placeholder="Укажите страну-производитель"/>
                            <span asp-validation-for="@Model.Brand.Country" class="text-danger"></span>
                        </div> 
                     </div>
                </div>
                
                <p>Выберите категорию</p>
                        <select asp-for="@Model.Category.Name" class="custom-select">                            
                            @foreach (var item in Model.Categories)
                           {
                               <option value="@item.Name">@item.Name</option>
                           }
                        </select>                                                       
                                           
                <input asp-for="@Model.PriceHistory.UpdatedDate" value="@DateTime.Now" type="hidden"/>

                <div class="form-group mt-1">
                    <label asp-for="@Model.PriceHistory.Value">Цена</label>
                    <input asp-for="@Model.PriceHistory.Value" class="form-control"/>
                    <span asp-validation-for="@Model.PriceHistory.Value" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Product.Count">Количество</label>
                    <input asp-for="@Model.Product.Count" class="form-control"/>
                    <span asp-validation-for="@Model.Product.Count" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Product.Image">Изображение</label>
                    <input asp-for="@Model.Product.Image" class="form-control" type="file"/>
                    <span asp-validation-for="@Model.Product.Image" class="text-danger"></span>
                </div>
                
                <button type="submit" class="btn btn-outline-success">Добавить</button>
                <a class="btn btn-outline-primary" asp-action="ProductList">Вернуться</a>
            </form>
        </div>
    </div>
</div>