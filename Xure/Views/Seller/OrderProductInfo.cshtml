@model SellerOrderViewModel;
@{
    Layout = "_ClientLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="row">
                <div class="col mt-4 bg-light">
                    <h3>Информация о продукте</h3>
                    <p>Название @Model.Product.Product.Name</p>                
                    <p>Количество @Model.Product.Quantity</p>
                </div>
            </div>

            <div class="row">
                <div class="col mt-4 bg-light">
                    <h3>Информация о заказе</h3>
                    <p>Клиент @Model.order.Client.UserInfo.Surname @Model.order.Client.UserInfo.UserName @Model.order.Client.UserInfo.MiddleName</p>
                    <p>Контактные данные: @Model.order.Client.UserInfo.PhoneNumber</p>
                    <p>Почта: @Model.order.Client.UserInfo.Email</p>
                    <a asp-action="MessageList" asp-controller="Messenger" asp-route-id="@Model.order.Client.Id">Написать</a>
                </div>
            </div>

            <div class="row mt-4 bg-light">
                <div class="col">
                     <form asp-action="CreateDelivery" method="post">
                         <div class="form-group">
                             <label>Укажите адрес приема заказа</label>
                             <input type="text" asp-for="@Model.Delivery.Address" class="form-control form-control-sm"/>
                         </div>

                         <div class="form-group">
                             <label>Укажите время отправления</label>
                             <input asp-for="@Model.Delivery.ArrivalTime" class="form-control form-control-sm"/>
                         </div>

                         <div class="form-group">
                              <label>Укажите время прибытия</label>
                              <input asp-for="@Model.Delivery.DepartTime" class="form-control form-control-sm"/>
                         </div>

                         <div class="form-group">
                             <label>Укажите код отслеживания</label>
                             <input asp-for="@Model.Product.TrackNumber" />
                         </div>
                         <input type="hidden" asp-for="@Model.sellerOrder.Id" value="@Model.sellerOrder.Id"> 
                         <input type="hidden" asp-for="@Model.Delivery.ReceprtionPointId" value="@Model.Product.ReceptionPointId"/>

                         <input type="hidden" asp-for="@Model.Product.ReceptionPointId" value="@Model.Product.ReceptionPointId" />
                         <input type="hidden" asp-for="@Model.Product.OrderDate" value="@Model.Product.OrderDate" />
                         <input type="hidden" asp-for="@Model.Product.ProductId" value="@Model.Product.ProductId"  />
                         <input type="hidden" asp-for="@Model.Product.Quantity" value="@Model.Product.Quantity"/>
                         <input type="hidden" asp-for="@Model.Product.OrderId" value="@Model.Product.OrderId" />
                         <input type="hidden" asp-for="@Model.Product.Status" value="Отправлен"/>
                         <button type="submit" class="btn btn-sm btn-outline-danger">
                             Отправить
                         </button>
                     </form>
                </div>
            </div>
        </div>
    </div>
</div>
